<% if @current_assignments.empty? %>
  <h4>There are no assignments in the system at this time.</h4>
<% else %>
<h4>Current Assignments</h4>
  <table class="striped highlight">
    <thead>
      <th>Start Date</th>
      <th>Store</th>
      <th>Employee</th>
      <th>Pay Grade</th>
      <th>Shift Count</th>
      <th class="align_center">Options</th>
    </thead>
    <% for assignment in @current_assignments %>
      <tr>
        <td><%= assignment.start_date.strftime("%m/%d/%y") %></td>
        <td><%= assignment.store.name %></td>
        <td><%= assignment.employee.proper_name %> </td>
        <td><%= assignment.pay_grade.level %> </td>
        <td><%= assignment.shifts.length %> </td>
        <td class="align_center">
          <%= link_to edit_assignment_path(assignment) do %>
              <i class="material-icons">edit</i>
          <% end %>
          &nbsp;&nbsp;&nbsp;&nbsp; 
          <%= link_to(assignment_path(assignment), method: :delete, data: { confirm: 'Are you sure you wish to delete this information?' }) do %>
              <i class="material-icons">delete</i>
          <% end %>
        </td>
      </tr>
    <% end %>
  </table>
  <br />
<% end %>
<p>&nbsp;</p>

<p><strong>
<%= link_to "Add a New Store", new_assignment_path, class: 'waves-effect waves-light btn' %> 
</strong></p>
